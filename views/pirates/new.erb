<h1>New Fleet Maker</h1>

<h2>Arrrr, make your pirate fleet below:</h2>

<form method="POST" action="/pirates">

  <fieldset>
    <legend>Pirate</legend>
    <label for="pirate_name">Pirate Name</label>
    <input id="pirate_name" type="text" name="pirate[name]"><br>
    <label for="pirate_weight">Pirate Weight</label>
    <input id="pirate_weight" type="text" name="pirate[weight]"><br>
    <label for="pirate_height">Pirate Height</label>
    <input id="pirate_height" type="text" name="pirate[height]">
  </fieldset>
  <fieldset>
    <legend>First Ship</legend>
  <label for="ship_name_1">Ship Name</label>
  <input id="ship_name_1" type="text" name="pirate[ships][][name]"><br>
  <label for="ship_type_1">Ship Type</label>
  <input id="ship_type_1" type="text" name="pirate[ships][][type]"><br>
  <label for="ship_booty_1">Ship Booty</label>
  <input id="ship_booty_1" type="text" name="pirate[ships][][booty]">
  </fieldset>
  <fieldset>
    <legend>Second Ship</legend>
  <label for="ship_name_2">Ship Name</label>
  <input id="ship_name_2" type="text" name="pirate[ships][][name]"><br>
  <label for="ship_type_2">Ship Type</label>
  <input id="ship_type_2" type="text" name="pirate[ships][][type]"><br>
  <label for="ship_booty_2">Ship Booty</label>
  <input id="ship_booty_2" type="text" name="pirate[ships][][booty]">
  </fieldset>

  <input type="submit" value="Submit" id="submit">
</form>
